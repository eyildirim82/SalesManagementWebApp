@model ProductViewModel

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Ürün Adı</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ListPrice">Liste Fiyatı</label>
        <input asp-for="ListPrice" class="form-control" type="number" required />
        <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PurchasePrices">Alış Fiyatı</label>
        <input asp-for="PurchasePrices" class="form-control" type="number" required />
        <span asp-validation-for="PurchasePrices" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Stok</label>
        <input asp-for="Quantity" class="form-control" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <!-- Kategori Dropdown -->
    <div class="form-group">
        <label asp-for="ProductCategoryID">Kategori</label>
        @Html.DropDownListFor(model => model.ProductCategoryID, Model.Categories, "Kategori Seçiniz", new { @class = "form-control", required = "required" })
        <span asp-validation-for="ProductCategoryID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

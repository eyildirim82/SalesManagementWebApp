        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Notes" class="form-label">Notlar</label>
        <textarea id="Notes" name="Notes" class="form-control" required>@Model.Notes</textarea>

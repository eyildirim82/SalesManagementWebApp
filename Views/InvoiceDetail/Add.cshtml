@model SalesManagementWebApp.Models.InvoiceDetailViewModel

<h2>Fatura Detay Ekle</h2>
<form asp-action="Add" method="post">
    <input type="hidden" asp-for="InvoiceID" />

    <div class="form-group">
        <label asp-for="ProductID">Ürün</label>
        @Html.DropDownListFor(
                 model => model.ProductID,
                 Model.Products,
                 "Ürün Seçiniz",
                 new { @class = "form-control", required = "required" }
                 )
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Miktar</label>
        <input asp-for="Quantity" class="form-control" step="1" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UnitPrice" class="form-label">Birim Fiyat</label>
        <input asp-for="UnitPrice" class="form-control" step="0.01" required />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TotalPrice" class="form-label">Toplam Fiyat</label>
        <input asp-for="TotalPrice" class="form-control" step="0.01" required />
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-action="Details" asp-route-invoiceId="@Model.InvoiceID" class="btn btn-secondary">Geri</a>
</form>

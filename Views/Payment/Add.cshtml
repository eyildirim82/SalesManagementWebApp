@model PaymentViewModel

<h2>Yeni Ödeme Ekle</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="InvoiceId">Fatura ID</label>
        <input type="number" class="form-control" id="InvoiceId" name="InvoiceId" required />
    </div>
    <div class="form-group">
        <label for="Amount">Tutar</label>
        <input type="number" class="form-control" id="Amount" name="Amount" step="0.01" required />
    </div>
    <div class="form-group">
        <label for="PaymentDate">Ödeme Tarihi</label>
        <input type="date" class="form-control" id="PaymentDate" name="PaymentDate" required />
    </div>
    <div class="form-group">
        <label for="PaymentMethod">Ödeme Yöntemi</label>
        <input type="text" class="form-control" id="PaymentMethod" name="PaymentMethod" required />
    </div>
    <div class="form-group">
        <label for="Notes">Notlar</label>
        <textarea class="form-control" id="Notes" name="Notes"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@model PaymentViewModel

<h2>Ödeme Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="InvoiceId">Fatura ID</label>
        <input type="number" class="form-control" id="InvoiceId" name="InvoiceId" value="@Model.InvoiceId" required />
    </div>
    <div class="form-group">
        <label for="Amount">Tutar</label>
        <input type="number" class="form-control" id="Amount" name="Amount" step="0.01" value="@Model.Amount" required />
    </div>
    <div class="form-group">
        <label for="PaymentDate">Ödeme Tarihi</label>
        <input type="date" class="form-control" id="PaymentDate" name="PaymentDate" value="@Model.PaymentDate.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="PaymentMethod">Ödeme Yöntemi</label>
        <input type="text" class="form-control" id="PaymentMethod" name="PaymentMethod" value="@Model.PaymentMethod" required />
    </div>
    <div class="form-group">
        <label for="Notes">Notlar</label>
        <textarea class="form-control" id="Notes" name="Notes">@Model.Notes</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
